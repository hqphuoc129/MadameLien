mixin modal(title,id, carouselArr)
	.modal.fade(id= id, tabindex="-1",role="dialog",aria-labelledby= id aria-hidden="true")
		.modal-dialog.modal-dialog-centered
			.modal-content
				.modal-header
					button.btn.btn-close(data-bs-dismiss="modal") 
				.modal-body
					.carousel.slide(id= `${id}carousel`, data-bs-ride="carousel", data-interval="false",data-pause="hover")
						.carousel-inner
							each item in carouselArr
								if (item.title == title)
									.carousel-item.active
										h2.carousel-title= item.title
										p.carousel-desc= item.desc
										a(href=`${item.link}.html`).btn.btn-default(type="button") Đọc thêm
								else
									.carousel-item
										h2.carousel-title= item.title
										p.carousel-desc= item.desc
										a(href=`${item.link}.html`).btn.btn-default(type="button") Đọc thêm
					button.carousel-control-prev(type="button" data-bs-target=`#${id}carousel` data-bs-slide="prev")
						span.carousel-control-prev-icon(aria-hidden="true")
						span.visually-hidden Previous
					button.carousel-control-next(type="button" data-bs-target=`#${id}carousel` data-bs-slide="next")
						span.carousel-control-next-icon(aria-hidden="true")
						span.visually-hidden Next
					
mixin infoItem(infoname,title, desc1, desc2, desc3)
	div(class= `${infoname}-content`)
		div(class= `${infoname}-titlebox`)
			h3(class= `${infoname}-title`)= title
		div(class= `${infoname}-descbox`)
			p(class= `${infoname}-desc`)= desc1
			p(class= `${infoname}-desc`)= desc2
			p(class= `${infoname}-desc`)= desc3